{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "strict": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["ui/**/*.ts", "cli/**/*.ts", "plugin/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules", "./**/*.spec.ts"]
}
